extends ../layout

block content
    h1 Orders to be shipped
    table.order_table
        tr
            th Orderdate
            th Product Name
            th Quantity Ordered
            th First Name
            th Last Name
            th Street Address
            th Zip Code
            th City
            th Phone
            th Email
            th Delete
        if order_list && order_list.length > 0
            each order in order_list
                tr
                    td #{order.order_date}
                    td #{order.orderdetails.product_name}
                    td #{order.orderdetails.quantity_ordered}
                    td #{order.customer.first_name}
                    td #{order.customer.last_name}
                    td #{order.customer.address.street_address}
                    td #{order.customer.address.zip_code}
                    td #{order.customer.address.city}
                    td #{order.customer.contact.phone}
                    td #{order.customer.contact.email}
                    td.center
                        a(href="/orders/delete?id=#{order.id}")
                            img.icon(src="/images/delete.png")
                    
        else
            tr
                td(colspan=12) No records