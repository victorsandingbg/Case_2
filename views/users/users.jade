extends ../layout

block content
    h1= title
    table.user_table
        select(id="user_list", name="user_list")
            each user in user_list
                option #{user.first_name}
        tr
            th First Name
            th Last Name
            th Email
            th Username
            th Year of Birth
            th Delete
        if user_list && user_list.length > 0
            each user in user_list
                tr
                    td #{user.first_name}
                    td #{user.last_name}
                    td #{user.email}
                    td #{user.username}
                    td #{user.birthyear}
                    td.center
                        a(href="/users/delete?id=#{user.id}")
                            img.icon(src="/images/delete.png")
        else
            tr
                td(colspan=6) No records