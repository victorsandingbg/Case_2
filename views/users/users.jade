extends ../layout

block content
    h1= title
    table.user_table
        tr
            th First Name
            th Last Name
            th Email
            th Username
            th Year of Birth
            if userid
                th Add as Friend
            th Delete
        if user_list && user_list.length > 0
            each user in user_list
                tr
                    td #{user.first_name}
                    td #{user.last_name}
                    td #{user.email}
                    td #{user.username}
                    td #{user.birthyear}
                    if userid
                        - var not_found = true
                        td.center
                            if userid === user.id
                                b You
                                - not_found = false
                            else
                                each friend in friends
                                    if friend == user.id
                                        b Friend
                                        - not_found = false
                                if not_found
                                    a(href="/users/add_friend?id=#{user.id}")
                                        b Add
                    td.center
                        a(href="/users/delete?id=#{user.id}")
                            img.icon(src="/images/delete.png")
        else
            tr
                td(colspan=6) No records